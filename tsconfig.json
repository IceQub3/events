{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "moduleResolution": "Bundler",
    "lib": ["esnext"],
    "target": "esnext",
    "module": "ES6",
    "types": [],
    "declaration": true,
    "verbatimModuleSyntax": true,
    "outDir": ".temp/types",
    "emitDeclarationOnly": true,
    "resolvePackageJsonExports": true
  },
  "include": [
    "src/**.ts"
  ]
}
